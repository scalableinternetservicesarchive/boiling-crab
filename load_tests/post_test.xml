<?xml version="1.0"?>
<!DOCTYPE tsung SYSTEM "/home/ec2-user/opt/tsung-1.5.0/share/tsung/tsung-1.0.dtd">
<tsung loglevel="notice" version="1.0">

  <!-- Client side setup -->
  <clients>
    <client host="localhost" use_controller_vm="true" maxusers='15000'/>
  </clients>

  <!-- Server side setup -->
  <servers>
    <server host="ec2-52-33-246-89.us-west-2.compute.amazonaws.com" port="80" type="tcp"></server>
  </servers>


  <load>
    <arrivalphase phase="1" duration="10" unit="second">
      <users arrivalrate="1" unit="second"></users>
    </arrivalphase>
  </load>

  <options>
    <!-- Set connection timeout to 2 seconds -->
    <option name="glocal_ack_timeout" value="2000"></option>

    <option type="ts_http" name="user_agent">
      <user_agent probability="100">Mozilla/5.0 (Windows; U; Windows NT 5.2; fr-FR; rv:1.7.8) Gecko/20050511 Firefox/1.0.4</user_agent>
    </option>
  </options>

  <sessions>
    <session name="http-example" probability="100" type="ts_http">

      <request subst="true">
        <http url="/login" version="1.1" method="POST" contents="utf8=%E2%9C%93&amp;session%5Bemail%5D=a%40a&amp;session%5Bpassword%5D=a&amp;commit=Log+in"></http>
      </request>

      <setdynvars sourcetype="random_number" start="1000" end="9999999">
        <var name="rand_val" />
      </setdynvars>

      <request subst="true">
        <http
          url='/posts'
          version='1.1'
          method='POST'
          contents="utf8=%E2%9C%93&amp;post%5Btitle%5D=p_%%_rand_val%%&amp;post%5Bdescription%5D=p_$$_rand_val%%&amp;post%5Bprice%5D=10&amp;commit=Create+Post">
      </http>
      </request>
    </session>
  </sessions>
</tsung>

